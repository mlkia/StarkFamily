@model StarkFamily.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeathDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeathDate)
        </dd>
        <dt class="col-sm-2">
            Children
        </dt>


        @if (Model.MotherChildren == null && Model.FatherChildren == null)
        {
            <dd class="col-sm-10">
                <p>No Children</p>
            </dd>
        }
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.MotherChildren.Count)
        @Html.DisplayFor(model => model.FatherChildren.Count)
    </dd>


        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
                @if (Model.MotherChildren != null)
                {
                    foreach (var item in Model.MotherChildren)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                        </tr>
                    }
                }

                @if (Model.FatherChildren != null)
                {
                    foreach (var item in Model.FatherChildren)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                        </tr>
                    }
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
